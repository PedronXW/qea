    "/sessions/": {  
      "post": {
        "tags": ["Sessions"],
        "summary": "Create a new session",
        "description": "Authentication Route",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Error message"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password must be at least 8 characters long."
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/sessions/reset-password": {
      "put": {
        "tags": ["Sessions"],
        "summary": "Reset password",
        "description": "Route used to reset the user's password",
        "responses": {
          "204": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "JWT sended to users mail"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password must be at least 8 characters long."
                  }
                }
              }
            }
          },
          "required": true
        }
      },
      "post": {
        "tags": ["Sessions"],
        "summary": "Send email to reset password",
        "description": "Route used to send a email to reset the user's password",
        "responses": {
          "200": {
            "description": "OK",
